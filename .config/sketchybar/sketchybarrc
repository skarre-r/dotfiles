#!/usr/bin/env sh

SCRIPTS="$HOME/.config/sketchybar/scripts"

sketchybar --bar \
    height=24 \
    position=top \
    color=0xff000000 \
    border_width=0 \
    border_color=0x40dcdcdc \
    sticky=on \
    topmost=off \
    margin=0 \
    y_offset=0 \
    corner_radius=0

sketchybar --default \
    label.font="SF Pro:Semibold:13.0" \
    label.color=0xfff5e0dc \
    icon.font="SF Pro:Semibold:14.0" \
    icon.color=0xfff5e0dc \
    padding_left=4 \
    padding_right=4 \
    label.padding_left=4 \
    label.padding_right=4 \
    icon.padding_left=4 \
    icon.padding_right=4

sketchybar \
    --add item clock right --set clock icon=􀐬 update_freq=10 script="$SCRIPTS/clock.sh" \
    --add item battery right --set battery update_freq=15 script="$SCRIPTS/battery.sh" \
    --add item volume right --set volume icon=􀊧 script="$SCRIPTS/volume.sh" --subscribe volume volume_change \
    --add item wifi right --set wifi script="$SCRIPTS/wifi.sh" --subscribe wifi wifi_change \
    --add item ip_address right --set ip_address update_freq=60 script="$SCRIPTS/ip_address.sh" \
    --add item app left --set app icon=􀣺 icon.padding_right=12 script="$SCRIPTS/event.sh" --subscribe app front_app_switched

sketchybar --update
