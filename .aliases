#!/usr/bin/env sh

alias ..='cd ..'
alias cd..='cd ..'
alias ls='ls -lG'
alias lsa='ls -lGa'
alias lsd='gls -la --color --group-directories-first'
alias dush='du -sh *'

# git
alias g='git'
alias gst='git status'
alias add='git add'
alias addu='git update-index --again'
alias adda='git update-index --again'
alias cmt='git commit -m'
alias amend='git commit --amend'
alias push='git push'
alias pull='git pull'
alias gl='git --no-pager log --oneline -n 20'
alias glog='git log --oneline'
alias gif='git --no-pager diff'
alias gifs='git --no-pager diff --staged'
alias gb='git --no-pager branch'
alias gbd='git branch -D'
alias switch='git switch'
alias checkout='git switch'  # git checkout
alias restore='git restore'
alias discard='git restore'  # git checkout --
alias gsl='git stash list'
alias gsp='git stash pop'
alias gsa='git stash apply'
alias gss='git stash save'
alias lg='lazygit'

# docker
alias dps='docker ps --format "table {{.ID}}\t{{.Image}}\t{{.Names}}\t{{.State}}\t{{.RunningFor}}\t{{.Status}}\t{{.Networks}}"'
